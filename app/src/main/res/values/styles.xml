<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>

    </style>
    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/abc</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:titleTextStyle">@style/AppTheme.MyActionBar.Text</item>

        <!-- Support library compatibility -->
        <item name="background">@color/abc</item>


    </style>
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppTheme.MyActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/input_login</item>
    </style>
    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Background for the search query section (e.g. EditText) -->
        <item name="android:textColor">@color/white</item>
        <!-- Background for the actions section (e.g. voice, submit) -->
   </style>
</resources>
