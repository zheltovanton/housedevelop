<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" >
    <TextView
        android:id="@+id/fav_ls_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"

        />
    <TextView
        android:id="@+id/fav_ls_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="username"
        android:textStyle="italic"
        android:textColor="#567"
        android:textSize="10dip"
        />
    <!-- Rightend Duration -->
    <TextView
        android:id="@+id/fav_ls_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/fav_ls_username"
        android:gravity="right"
        android:text="0/0"

        android:layout_marginRight="5dip"
        android:textSize="8dip"
        android:textColor="#789"
        android:textStyle="bold"/>

    <!-- Rightend Arrow -->


    <TextView
        android:id="@+id/fav_ls_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#343434"
        android:textSize="12dip"
        android:layout_marginTop="18dip"
        android:text="..." />

    <TextView
        android:id="@+id/fav_ls_developer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fav_ls_address"

        android:textColor="#343434"
        android:textSize="12dip"
        android:layout_marginTop="4dip"
        android:text="..." />

    <TextView
        android:id="@+id/fav_ls_comment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fav_ls_developer"
        android:textColor="#343434"
        android:textSize="12dip"
        android:layout_marginTop="4dip"
        android:text="..." />

    <TextView
        android:id="@+id/fav_ls_lastcomment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fav_ls_comment"
        android:textSize="12dip"
        android:layout_marginTop="4dip"
        android:text="..."
        android:textStyle="italic"
        android:textColor="#789"/>


    <View android:id="@+id/separator"
        android:background="@color/abc"
        android:layout_width = "fill_parent"
        android:layout_height="1dip"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"/>

</RelativeLayout>